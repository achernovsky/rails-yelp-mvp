<%= form_for @restaurant do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
    <%= f.label :category, "Category:" %>
  <%= f.text_field :category %>
    <%= f.label :address, "Address:" %>
  <%= f.text_field :address %>
    <%= f.label :phone_number, "Phone:" %>
  <%= f.text_field :phone_number %>
  <%= f.submit %>
<% end %>



